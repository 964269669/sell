body,html
	line-height: 1
	font-weight: 200
	font-family: "PingFang SC",arial,sans-serif

border-1px($color)
	position: relative
	&:after
		content: ' '
		display: block
		width: 100%;
		position: absolute
		left: 0
		bottom: 0
		border-top: 1px solid $color
bg-image($url)
	background-image: url($url+"@2x.png")
	@media (-webkit-min-device-pixel-ration: 3),(min-device-pixel-ration: 3)
		background-image: url($url+"@3x.png")
